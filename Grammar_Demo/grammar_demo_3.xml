<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<Mission xmlns="http://ProjectMalmo.microsoft.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <About>
    <Summary>Cliff walking mission based on Sutton and Barto.</Summary>
  </About>

  <ServerSection>
    <ServerInitialConditions>
        <Time><StartTime>1</StartTime></Time>
    </ServerInitialConditions>
    <ServerHandlers>
      <FlatWorldGenerator generatorString="3;7,220*1,5*3,2;3;,biome_1"/>
      <DrawingDecorator>
        <!-- coordinates for cuboid are inclusive -->
        <DrawCuboid x1="-2" y1="46" z1="-2" x2="7" y2="50" z2="13" type="air" />            <!-- limits of our arena -->
        <DrawCuboid x1="-2" y1="45" z1="-2" x2="7" y2="45" z2="13" type="lava" />           <!-- lava floor -->
        <DrawCuboid x1="1"  y1="45" z1="1"  x2="3" y2="45" z2="9" type="sandstone" />      <!-- floor of the arena -->
        <DrawBlock x="3"  y="45" z="1" type="cobblestone" />    <!-- the starting marker -->
        <DrawBlock x="4"  y="45" z="6" type="lapis_block" />     <!-- the destination marker -->
        <!--<DrawBlock x="0"  y="45" z="7" type="sandstone" />
        <DrawBlock x="-1"  y="45" z="7" type="sandstone" />-->
        <DrawBlock x="2"  y="45" z="9" type="diamond_block" />
        <DrawBlock x="1"  y="45" z="3" type="redstone_block" />
        <DrawBlock x="2"  y="45" z="11" type="gold_block" />
        <!--<DrawBlock type="chest" x="2" y="46" z="12"/>-->
        <!--<DrawItem type="apple" x="3" y="46" z="7"/>-->
        <DrawItem type="diamond" x="1" y="46" z="3"/>
      </DrawingDecorator>
      <ServerQuitFromTimeUp timeLimitMs="100000" description="no-time"/>
      <ServerQuitWhenAnyAgentFinishes/>
    </ServerHandlers>
  </ServerSection>

  <AgentSection mode="Survival">
    <Name>Cristina III</Name>
    <AgentStart>
      <Placement x="3.5" y="46.0" z="1.5" pitch="30" yaw="0"/>
    </AgentStart>
    <AgentHandlers>
      <DiscreteMovementCommands/>
      <InventoryCommands/>
      <MissionQuitCommands/>
      <ObservationFromFullStats/>
      <ObservationFromFullInventory flat="false"/>
      <RewardForSendingCommand reward="-0.1" /> <!-- Added this so agent doesn't stick to one place and timeout -->
      <RewardForMissionEnd>
        <Reward description="no-time" reward="-100" /> <!-- Added so agent exits properly -->
      </RewardForMissionEnd>
      <RewardForTouchingBlockType>
        <Block reward="-100" type="lava" behaviour="onceOnly"/>
      </RewardForTouchingBlockType>
      <!-- Added this to push agent toward unlocking -->
      <RewardForReachingPosition>
        <Marker x="2.5"  y="46" z="8.5" reward="5" tolerance="0.5"/>
        <Marker x="2.5"  y="46" z="7.5" reward="2" tolerance="0.5"/>
        <Marker x="4"  y="46" z="5" reward="5" tolerance="0.5"/>
      </RewardForReachingPosition>
      <!-- Added this to to cover key collection -->
      <!-- Look into removing grab action -->
      <RewardForCollectingItem>
        <Item type="diamond" reward="30"/> 
      </RewardForCollectingItem>
      <ObservationFromGrid>
          <Grid name="floor3x3">
            <min x="-1" y="-1" z="-1"/>
            <max x="1" y="-1" z="1"/>
          </Grid>
      </ObservationFromGrid>
      <AgentQuitFromTouchingBlockType>
          <Block type="lava" />
      </AgentQuitFromTouchingBlockType>
      <!--<VideoProducer>
        <Width>860</Width>
        <Height>480</Height>
      </VideoProducer>-->
      <VideoProducer>
        <Width>172</Width>
        <Height>96</Height>
      </VideoProducer>
    </AgentHandlers>
  </AgentSection>

</Mission>
